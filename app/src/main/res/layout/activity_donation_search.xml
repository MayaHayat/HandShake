<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".donationSearchActivity">

    <Spinner
        android:id="@+id/donationLocationFilter"
        android:layout_width="160dp"
        android:layout_height="47dp"
        android:layout_marginTop="144dp"
        android:entries="@array/regions"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </Spinner>

    <Spinner
        android:id="@+id/donationTypeFiler"
        android:layout_width="176dp"
        android:layout_height="44dp"
        android:layout_marginTop="48dp"
        android:entries="@array/type"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/donationLocationFilter">

    </Spinner>

    <Button
        android:id="@+id/filterDonations"
        android:layout_width="190dp"
        android:layout_height="103dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="121dp"
        android:layout_marginEnd="111dp"
        android:text="הפעל סינון"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/donationTypeFiler" />

</androidx.constraintlayout.widget.ConstraintLayout>