<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DonorProfileActivity">

    <Button
        android:id="@+id/viewDonationsButton"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/blue_button"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="פרסם תרומה חדשה"
        android:textColor="#FEFEFE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="188dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/nameProfile"
        android:layout_width="132dp"
        android:layout_height="51dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/circular_text"
        android:text="Name"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageProfile" />

    <TextView
        android:id="@+id/rateProfile"
        android:layout_width="114dp"
        android:layout_height="44dp"
        android:layout_marginTop="33dp"
        android:background="@drawable/circular_text"
        android:text="My rate"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phoneNumberProfile" />

    <Button
        android:id="@+id/goToDonorRequests"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/blue_button"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="תרומות שנשמרו"
        android:textColor="#FEFEFE"
        app:layout_constraintEnd_toStartOf="@+id/viewDonationsButton"
        app:layout_constraintHorizontal_bias="0.377"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/aboutMeProfile"
        android:layout_width="264dp"
        android:layout_height="112dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/tellusaboutyourself"
        android:text="About me"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/rateProfile"
        app:layout_constraintStart_toStartOf="@+id/rateProfile"
        app:layout_constraintTop_toBottomOf="@+id/rateProfile" />

    <TextView
        android:id="@+id/phoneNumberProfile"
        android:layout_width="152dp"
        android:layout_height="38dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/circular_text"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="@+id/nameProfile"
        app:layout_constraintStart_toStartOf="@+id/nameProfile"
        app:layout_constraintTop_toBottomOf="@+id/nameProfile" />

</androidx.constraintlayout.widget.ConstraintLayout>