<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewNewDonationsActivity">

    <Spinner
        android:id="@+id/donationLocationFilter"
        android:layout_width="160dp"
        android:layout_height="47dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:entries="@array/regions"
        android:padding="10dp"
        android:paddingStart="8dp"
        android:paddingEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/donationTypeFiler"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/donationTypeFiler"
        android:layout_width="176dp"
        android:layout_height="44dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="24dp"
        android:entries="@array/type"
        android:padding="10dp"
        android:paddingStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/filterDonations"
        android:layout_width="196dp"
        android:layout_height="59dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/blue_button"
        android:text="הפעל סינון"
        android:textColor="#FEFEFE"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/donationList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/filterDonations" />

</androidx.constraintlayout.widget.ConstraintLayout>
